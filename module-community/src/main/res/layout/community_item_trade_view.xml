<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.guet.community.trade.bean.TradeCustomViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/common_color_white"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_project_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/item_project_toplinear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/item_project_avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_project_avatar"
                app:layout_constraintTop_toTopOf="@+id/item_project_avatar">

                <TextView
                    android:id="@+id/item_project_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.ownerName}"
                    android:textColor="@color/common_small_text"
                    android:textSize="13sp"
                    tools:text="有何高见" />

                <TextView
                    android:id="@+id/item_project_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/title_label_shape_red"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="置顶"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/item_project_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/title_label_shape_red"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="新"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/item_project_type1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/title_label_shape_green"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="问答"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="10sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/item_project_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@{viewModel.gmtCreate}"
                    android:textColor="@color/common_small_text"
                    android:textSize="13sp"
                    tools:text="1小时前" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <RelativeLayout
                android:id="@+id/community_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/item_project_avatar"
                app:layout_constraintTop_toBottomOf="@+id/item_project_avatar">

                <ImageView
                    android:id="@+id/item_project_imageview"
                    imageUrl="@{viewModel.imageUrl}"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/windowBackground"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/item_project_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toEndOf="@+id/item_project_imageview"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@{viewModel.title}"
                    android:textColor="@color/common_color_black_light"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    tools:text="这是一个菜的扣jio的人写的项目" />

                <TextView
                    android:id="@+id/item_project_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_project_title"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toEndOf="@+id/item_project_imageview"
                    android:ellipsize="end"
                    android:includeFontPadding="true"
                    android:lineSpacingMultiplier="1.4"
                    android:maxLines="3"
                    android:text="@{viewModel.address}"
                    android:textColor="@color/common_small_text"
                    android:textSize="13sp"
                    tools:text="一个Jetpack结合MVVM的快速开发框架，基于MVVM模式集成谷歌官方推荐的JetPack组件库：LiveData、ViewModel、Lifecycle组件 使用Kotlin语言，添加大量拓展函数，简化代码 加入Retrofit网络请求,协程，帮你简化各种操作，让你快速开发项目" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/community_relativelayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/community_relativelayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/community_relativelayout">

                <TextView
                    android:id="@+id/item_project_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="@{viewModel.title}"
                    android:textColor="@color/common_small_text"
                    android:textSize="13sp"
                    tools:text="分类·项目" />

                <ImageView
                    android:id="@+id/item_project_collect"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>